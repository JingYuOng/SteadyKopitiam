<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Container for contents of drawer - use NavigationViewActivity to make configuration easier -->

    <LinearLayout
        tools:context=".EditProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <!--    <ScrollView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="0dp"-->
        <!--        android:layout_weight="7">-->

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_marginLeft="12dp"-->
        <!--            android:layout_marginRight="12dp"-->
        <!--            android:layout_marginBottom="24dp"-->
        <!--            android:layout_marginTop="12dp">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorLightGrey"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"

                        android:hint="@string/register_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_password"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_phoneNumber"
                        android:maxLength="8"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_name"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/profile_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/profile_male"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:clickable="true"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/register_male"
                            android:text="@string/register_male"
                            android:textColor="@color/colorDarkGrey"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/profile_female"
                            style="@android:style/Widget.CompoundButton.RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/register_female"
                            android:text="@string/register_female"
                            android:textColor="@color/colorDarkGrey"
                            android:textColorHighlight="@color/colorLightGrey"
                            android:textColorHint="@color/colorLightGrey"
                            android:textSize="18sp" />
                    </RadioGroup>


                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_age"
                        android:maxLength="3"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_weight"
                        android:maxLength="5"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_input_layout_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    app:errorTextAppearance="@style/ErrorText">

                    <EditText
                        android:id="@+id/profile_height"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/register_height"
                        android:maxLength="5"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/profile_input_layout_choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary"
                        app:helperText="@string/register_dailyActivity"
                        app:helperTextEnabled="false">

                        <Spinner
                            android:id="@+id/profile_spinnerChoice"
                            style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="multiply"
                            android:dropDownWidth="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:scrollbarSize="18dp"
                            android:spinnerMode="dialog" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:background="#FF009688"
                    android:fontFamily="@font/roboto"
                    android:text="@string/update"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_items" />

</androidx.drawerlayout.widget.DrawerLayout>