        <activity android:name=".RegisterActivity" android:configChanges="orientation" android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity" android:configChanges="orientation" android:screenOrientation="portrait" />
        <activity android:name=".ui.home.HomeActivity" android:configChanges="orientation" android:screenOrientation="portrait" />
        <activity
            android:name=".LaunchingScreen"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>