<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steadykopitiam">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.tutorial.TutorialActivity"></activity>
        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.about.AboutActivity" />
        <activity android:name=".ui.purchases.PurchasesActivity" />
        <activity android:name=".FoodItemActivity" />
        <activity android:name=".QRActivity" />
        <activity android:name=".ui.wallet.WalletActivity" />
        <activity android:name=".StallActivity" />
        <activity android:name=".UserProfile" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity
            android:name=".LaunchingScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>